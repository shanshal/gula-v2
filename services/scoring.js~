const answerModel = require('../models/answerModel');
const surveyModel = require('../models/surveyModel'); // your survey JSON storage
const protocoles = require('../utils/protocoles');

const calculateSurveyScore = async (userId, surveyId) => {
  const surveyJSON = await surveyModel.getSurveyById(surveyId);
  if (!surveyJSON) throw new Error('Survey not found');

  const responses = await answerModel.getUserAnswersForSurvey(userId, surveyId);

  switch (surveyJSON.scoring?.type) {
    case 'grouped':
      return protocoles.scoreGrouped(responses, surveyJSON.scoring);
    case 'formula':
      return protocoles.scoreFormula(responses, surveyJSON.scoring);
    case 'sum':
      return protocoles.scoreSum(responses, surveyJSON.scoring?.mappings);
    default:
      return protocoles.leaderShipSurveyHandler(responses);
  }
};

module.exports = { calculateSurveyScore };
